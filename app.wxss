.wrapper {
  height: 100%;
  width: 100%;
  background-color: #f4f4f4;
}

page {
  width: 100%;
  height: 100%;
}

/*加载动画  */

.bg-rotate-loader {

  position: fixed;
  top: 35%;
  left: 325rpx;
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  border: 5px solid #b8d0fa;
  border-top-color: #ff8022;
  border-radius: 50%;
  animation: bg-loader-rotate 1s linear infinite;
}

@keyframes bg-loader-rotate {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}
