/* pages/itemlist/itemlist.wxss */
.header{
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.question{
  padding: 20rpx 25rpx;
  display: flex;
  flex-direction: column;
}
.questtit{
  font-size: 36rpx;
  font-weight: bold;
}
.questcon{
  margin-top: 10rpx;
  font-size: 34rpx;
}
.button{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #F4F4F4;
  padding: 20rpx 0;
  font-size: 28rpx;
}
.button image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}

/*中间项目数量显示，及排序方式(未作)  */
.viewnum{
  width: 710rpx;
  display: flex;
  justify-content: flex-start;
  padding: 3% 0 0 25rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}
.content{
  width: 100%;
}
/*没有项目时提示语  */
.noitem{
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  color: #8a8a8a;
}
.noitem image{
  width: 200rpx;
  height: 200rpx;
}
.noitem text{
  margin-top: 20rpx;
  
}

/*答案列表  */

.itemlist{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.item{
  display: flex;
  margin-top:2%; 
  width: 700rpx;
  padding: 25rpx;
  background-color: #fff;
  flex-direction: column;
}
.itemuser{
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 34rpx;
  font-weight: 500rpx;
  padding-bottom: 14rpx;
}
.itemuser image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  clip-path: circle();
}

.itemmain{
  width: 100%;
  display: flex;
  flex-direction: column;

}
.itemtitle{
  font-size: 38rpx;
  font-weight:bold;
  padding-bottom:14rpx; 
}
/*css定义让其只显示三行  */
.itemcontent{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  width: 100%;
  font-size: 35rpx;
  margin-bottom:14rpx;
}

.iteminfo{
  display: flex;
  flex-direction: row;
  color: #bdbdbd;
  font-size: 28rpx;
}
.iteminfo text{
  padding-right:20rpx;
}