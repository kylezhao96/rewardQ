/* pages/mywallet/mywallet.wxss */
.header{
  width: 700rpx;
  padding:15rpx 25rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.blance{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.blance text{
  margin-right: 20rpx;
}
.blance .name{
  font-size: 30rpx;
  color: #8a8a8a;
  font-weight: light;
}
.header button{
  margin: 0;
}

/*交易记录  */
.recordlist{
  width: 700rpx;
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  padding: 0 25rpx;
  background: #fff;
}
.title{
  padding: 15rpx 0;
  font-size: 30rpx;
  color: #8a8a8a;
  font-weight: light;
}
/*记录  */
.recorditem{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 2rpx solid #f4f4f4;
}
.recordright{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
}
.recordname{
  font-weight: light;
}
.recordtime{
  color: #8a8a8a;
  font-size: 30rpx;
  font-weight: light;
}
/*没有记录时样式  */
.norecord{
  margin-top: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  color: #8a8a8a;
}
.norecord image{
  width: 30%;
}
.norecord text{
  margin-top: 20rpx;
  
}

